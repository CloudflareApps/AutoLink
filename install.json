{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./bower_components/Autolinker.js/dist/Autolinker.js"
      },
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "options": {
    "properties": {
      "email": {
        "order": 0,
        "type": "boolean",
        "title": "Email Addresses",
        "description": "Link email addresses to email apps.",
        "default": true,
        "type": "boolean"
      },
      "phone": {
        "order": 0,
        "type": "boolean",
        "title": "Phone Numbers",
        "description": "Link phone numbers on devices that can make calls.",
        "default": true,
        "type": "boolean"
      },
      "mention": {
        "order": 0,
        "type": "string",
        "title": "Mentions",
        "description": "Link usernames beginning with “@”",
        "default": "twitter",
        "enum": [
          "none",
          "twitter",
          "instagram"
        ],
        "enumNames": {
          "none": "none",
          "twitter": "Twitter",
          "instagram": "Instagram"
        }
      },
      "hashtag": {
        "order": 0,
        "type": "string",
        "title": "Hashtags",
        "description": "Link hashtags beginning with “#”",
        "default": "twitter",
        "enum": [
          "none",
          "twitter",
          "instagram",
          "facebook"
        ],
        "enumNames": {
          "none": "none",
          "twitter": "Twitter",
          "instagram": "Instagram",
          "facebook": "Facebook"
        }
      },
      "advanced": {
        "order": 10,
        "title": "Advanced Options",
        "type": "object",
        "properties": {
          "showAdvancedOptions": {
            "order": 0,
            "type": "boolean",
            "title": "Show advanced options",
            "default": false,
            "type": "boolean"
          },
          "newWindow": {
            "order": 1,
            "showIf": "advanced.showAdvancedOptions",
            "type": "boolean",
            "title": "Open links in new tab",
            "default": false,
            "type": "boolean"
          },
          "stripPrefix": {
            "order": 2,
            "showIf": "advanced.showAdvancedOptions",
            "type": "boolean",
            "title": "Hide “http” and “www” from link",
            "default": false,
            "type": "boolean"
          },
          "location": {
            "order": 3,
            "showIf": "advanced.showAdvancedOptions",
            "title": "Location",
            "type": "string",
            "format": "selector",
            "default": "body"
          }
        }
      }
    }
  }
}
